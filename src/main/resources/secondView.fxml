<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.ControllerSec"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      prefHeight="400.0" prefWidth="600.0">

    <HBox>
        <ComboBox fx:id="disksBox" onAction="#selectDisk"/>
        <TextField fx:id="pathField" editable="false" HBox.hgrow="ALWAYS" />
        <Button onAction="#btnUp" text="UP" />
    </HBox>
    <TableView fx:id="filesTableOne" prefHeight="400.0" prefWidth="345.0" VBox.vgrow="ALWAYS" />

    <properties>
        <ctrl>
            <fx:reference source="controller"/>
        </ctrl>
    </properties>

</VBox>
